<!DOCTYPE html>
<html>
<head>
  <title>Chupandero</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<% flash.each do |name, msg| %>
	  <% if msg.class == Array %>
	    <% msg.each do |message| %>
	      <%= content_tag :div, message, :id => "flash_#{name}", :class => "alert" %>
	    <% end %>
	  <% else %>
      <%= content_tag :div, msg, :id => "flash_#{name}", :class => "alert" %>
  <% end %>
<% end %>
	<%= render 'layouts/header' %>
	<div style="margin-top:3%" class="row-fluid">
		<div class="row">
			<div id="modal-id"></div>
			<%= yield %>
		</div>
	</div>
</body>
</html>
