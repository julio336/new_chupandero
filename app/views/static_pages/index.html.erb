<script type="text/javascript">
$(document).ready(function(){
	$('.span4').bind({
		mouseenter: 
		function(e){
			e.preventDefault();
			$(this).css("box-shadow", "3px 4px 4px 1px #d0d0d0");
			$(this).css("margin-top", "1%");
			
		},
		mouseleave:
		function (e){
			e.preventDefault();
			$(this).css("box-shadow", "none");
			$(this).css("margin-top", "0%");
			
		}
	});
});	
</script>